<p id="notice"><%= notice %></p>
<div class="container">
  <h1>Books</h1>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">Photo</th>
        <th scope="col">Status</th>
        <th scope="col">Bookcase</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.description %></td>
          <td><%= book.photo %></td>
          <td><%= book.status %></td>
          <td><%= book.bookcase.name %></td>
          <td><%= link_to 'Show', book %></td>
          <td><%= link_to 'Edit', edit_book_path(book) %></td>
          <td><%= link_to 'Destroy', delete_the_book_url(book) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Book', new_book_path, class:"btn btn-link"%>
  <%=  link_to  "New Bookcase", new_bookcase_path, class:"btn btn-link" %>
</div>