<div class="container">
  
  <p id="notice"><%= notice %></p>
  <%= stylesheet_link_tag 'bookcases', 'data-turbolinks-track': 'reload' %>

    <h1>Bookcases</h1>

    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th>User</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @bookcases.each do |bookcase| %>
          <tr class="container">
            <td><%= bookcase.name %></td>
            <td><%= bookcase.description %></td>
            <td><%= bookcase.user.email %></td>
            <td><%= link_to 'Mostrar', bookcase %></td>
            <td><%= link_to 'Editar', edit_bookcase_path(bookcase) %></td>
            <td><a onclick="removebookcase(<%= bookcase.id %>)" class="btn btn-danger text-light">Excluir</a></td>
          </tr>
        <% end %>
      </tbody>
    </table>

    <br>


  <%= link_to 'New Bookcase', new_bookcase_path, class:"btn btn-link" %>
  <%= link_to 'New Book', new_book_path, class:"btn btn-link"%>

</div>
